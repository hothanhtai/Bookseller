<script>
$(document).ready(function(){
    $('#icon').click(function(){
            if ($('#icon').hasClass('bi bi-eye')) {
                $('#icon').removeClass('bi bi-eye').addClass('bi bi-eye-slash-fill');
                    $('#password').attr('type','text');
        } else {
                $('#icon').removeClass('bi bi-eye-slash-fill').addClass('bi bi-eye');
                $('#password').attr('type', 'password');
        }
    });
});

</script>